<h1>Edit Posts</h1>

<% if @errors %>
    <% @errors.each do |error| %>
        <%= error %> <br>
    <% end %>
<% end %>

<%= form_for @post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :content %> 
    <%= f.text_field :content %><br>

    <%= f.label :blogger_id %> 
    <%= f.collection_select :blogger_id, @bloggers, :id, :name %><br>

    <%= f.label :destination_id %> 
    <%= f.collection_select :destination_id, @destinations, :id, :name %><br>

    <%= f.submit "Done!" %> 

<% end %>